@using System.Backend.Models
@using System.Services.Models
@model System.Services.Models.ProductoViewModel
@{
    ViewBag.Title = "Nuevo Producto";
    var selectMarca = (IEnumerable<SelectListItem>)ViewData["Marca"];
    var selectCategoria = (IEnumerable<SelectListItem>)ViewData["Categoria"];

}
<link href="~/css/rol_style.css" rel="stylesheet" />
<header class="content__title">
    <h1>@ViewBag.Title</h1>
    <div class="actions">
        <a href="@Url.Action("Index", "Producto")" class="actions__item zmdi zmdi-arrow-left text-danger" title="Volver"></a>
    </div>
</header>
<form asp-action="Create" asp-controller="Producto" method="post" id="CreateProductoForm">
    <div class="card">
        <div class="card-block">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group form-group--float">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", tabindex = "1" })
                        <label>Nombre</label>
                        <i class="form-group__bar"></i>
                    </div>
                    <span asp-validation-for="Nombre" id="text-nombre-error" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-group--float">
                        @Html.TextBoxFor(model => model.BreveDescripcion, new { @class = "form-control", tabindex = "2" })
                        <label>Breve Descripcion</label>
                        <i class="form-group__bar"></i>
                    </div>
                    <span asp-validation-for="BreveDescripcion" id="text-nombre-error" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group form-group--float">
                        @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", type = "number", tabindex = "3" })
                        <label>Precio</label>
                        <i class="form-group__bar"></i>
                    </div>
                    <span asp-validation-for="Precio" id="text-nombre-error" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-group--float">
                        @Html.TextBoxFor(model => model.Codigo, new { @class = "form-control", tabindex = "4" })
                        <label>Codigo</label>
                        <i class="form-group__bar"></i>
                    </div>
                    <span asp-validation-for="Codigo" id="text-nombre-error" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-group--float">
                        @Html.TextBoxFor(model => model.Cantidad, new { @class = "form-control", type = "number", tabindex = "5" })
                        <label>Cantidad</label>
                        <i class="form-group__bar"></i>
                    </div>
                    <span asp-validation-for="Cantidad" id="text-nombre-error" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <select class="form-control select2" id="estado" name="Estado" tabindex="6">
                        <option>Seleciona un estado</option>
                        <option value="1">EN STOCK</option>
                        <option value="0">SIN STOCK</option>
                    </select>
                </div>
                <span asp-validation-for="Estado" id="text-nombre-error" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-4">
                    @Html.DropDownList("MarcaId", selectMarca, "-Seleccione Marca-", new { @class = "form-control select2", tabindex = "7" })
                    <span asp-validation-for="MarcaId" id="text-nombre-error" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    @Html.DropDownList("CategoriaId", selectCategoria, "-Seleccione Categoria-", new { @class = "form-control select2", tabindex = "8" })
                    <span asp-validation-for="CategoriaId" id="text-nombre-error" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group form-group--float">
                        @Html.TextArea("Descripcion", null, new { @class = "form-control", tabindex = "9" })
                        <label>Descripción</label>
                        <i class="form-group__bar"></i>
                    </div>
                    <span asp-validation-for="Descripcion" id="text-nombre-error" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-auto">
            <button id="submit-btn" class="btn btn-primary btn--icon-text waves-effect float-right" tabindex="10">
                <i class="zmdi zmdi-save"></i>
                Guardar
            </button>
        </div>
    </div>
</form>
    @section Scripts
        {
        <script>
            $("#submit-btn").click(function (event) {
                event.preventDefault();
                if ($("#CreateProductoForm").valid()) {
                    $("#submit-btn").html("<i class='zmdi zmdi-spinner fa-spin'></i> Procesando...");
                    $("#submit-btn").addClass("disabled");
                    document.getElementById("submit-btn").style.pointerEvents = "none";
                    $('#CreateProductoForm').submit();
                }
            });
        </script>
    }