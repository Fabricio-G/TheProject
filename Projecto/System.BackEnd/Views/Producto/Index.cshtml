@model IEnumerable<System.Services.Models.ProductosModel>
@using NonFactors.Mvc.Grid
@using System.Backend.Extensions
@{
    var Email = User.Claims.FirstOrDefault(x => x.Type == "Usuario").Value;
    var edit = Html.ColumnTablePermission("Edit", "Productos", Email);
    var delete = Html.ColumnTablePermission("Delete", "Productos", Email);
    ViewData["Title"] = "Marcas";
}

@{
    ViewData["Title"] = "Index";
}
<header class="content__title">
    <h1>@ViewData["Title"]</h1>
    <div class="actions">
        @Html.ActionLinkRole("", "actions__item zmdi zmdi-plus text-success", "Create", "Productos", Email)
    </div>
</header>

<h2>Index</h2>
<div class="card">
    <div class="card-block">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-12">
                        @(Html.Grid(Model)
                            .Build(columns =>
                            {
                                columns.Add(m => m.ProductosId).Titled("N°");
                                columns.Add(m => m.Nombre).Titled("Nombre");
                                columns.Add(m => Html.ActionLink("", "Edit", "Productos", new { Id = m.ProductosId }, new { @class = "zmdi zmdi-edit text-warning", @title = "Editar" })).Css("action-cell " + edit).Titled("Editar");
                                columns.Add(m => Html.ActionLink("", "Delete", "Productos", new { Id = m.ProductosId }, new { @class = "zmdi zmdi-delete text-danger swal-delete", @title = "Eliminar" })).Css("action-cell " + delete).Titled("Eliminar");
                            })
                            .Empty("No se encontró ningún registro")
                            .Css("table table-hover")
                        )
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

