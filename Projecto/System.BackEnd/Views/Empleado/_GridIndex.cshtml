@model IEnumerable<System.Services.Models.EmpleadoViewModel>
@{
    var Email = User.Claims.FirstOrDefault(x => x.Type == "Usuario").Value;
    var edit = Html.ColumnTablePermission("Edit", "Empleado", Email);
    var delete = Html.ColumnTablePermission("Delete", "Empleado", Email);
    ViewData["Title"] = "Empleados";
}
@(Html.Grid(Model)
            .Build(columns =>
            {
                columns.Add(m => m.EmpleadoId).Titled("N°");
                columns.Add(m => m.Nombre).Titled("Nombre");
                columns.Add(m => m.Apellido).Titled("Apellido");
                columns.Add(m => m.DNI).Titled("DNI");
                columns.Add(m => m.Domicilio).Titled("Domicilio");
                columns.Add(m => m.Telefono).Titled("Telefono");
                columns.Add(m => m.JornadasTrabajadas).Titled("Jornadas Trabajadas");
                columns.Add(m => m.Sueldo).Titled("Sueldo");
                columns.Add(m => Html.ActionLink("", "Edit", "Empleado", new { Id = m.EmpleadoId }, new { @class = "zmdi zmdi-edit text-warning", @title = "Editar" })).Css("action-cell " + edit).Titled("Editar");
                columns.Add(m => Html.ActionLink("", "Delete", "Empleado", new { Id = m.EmpleadoId }, new { @class = "zmdi zmdi-delete text-danger swal-delete", @title = "Eliminar" })).Css("action-cell " + delete).Titled("Eliminar");
            })
            .Empty("No se encontró ningún registro")
            .Css("table table-hover")
)